#!/bin/bash

if [ ! -d /dev/cpu ] ; then
	mkdir /dev/cpu
fi
for i in 0 1 2 3 4 5 6 7
do
	if [ ! -d /dev/cpu/$i ] ; then
		mkdir /dev/cpu/$i
	fi
	if [ ! -f /dev/cpu/$i/cpuid ] ; then
		mknod cpuid c 203 $i
	fi
	if [ ! -f /dev/cpu/$i/msr ] ; then
		mknod msr c 202 $i
	fi
done

echo "cpuid & msr /dev nodes created."
